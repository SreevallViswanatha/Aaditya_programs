#include <stdio.h>
#include <stdlib.h>

int main()
{

   int num, sum, number;
   printf("Enter a four-digit number: ");
   scanf("%d", &number);
   num=number;
   sum=0;
   sum=number/1000;
   number=number/10;
   number=number%10;
   sum=sum+number;
   printf("The sum of the first and third digit in %d is: %d", num, sum);
}

