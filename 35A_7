#include <stdio.h>
#include <stdlib.h>

int main()
{

   int sum, num, number, thirdnumber, secondnumber;
   printf("Enter a four-digit number: ");
   scanf("%d", &number);
   sum=0;
   num=number;
   number=number/10;
   thirdnumber=number%10;
   sum=sum+thirdnumber;
   number=number/10;
   secondnumber=number%10;
   sum=sum+secondnumber;
   printf("The sum of the second and third digit in %d is: %d", num, sum);
}
