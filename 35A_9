#include <stdio.h>
#include <stdlib.h>

int main()
{

    int firstnumber, fourthnumber, sum, num, number;
    printf("Enter a four-digit number: ");
    scanf("%d", &number);
    sum=0;
    num=number;
    firstnumber=number/1000;
    fourthnumber=number%10;
    sum=firstnumber+fourthnumber;
    printf("The sum of the first and fourth number in %d is: %d", num, sum);
}
