#include <stdio.h>
#include <stdlib.h>

int main()
{

    int num, sum, number, secondnumber, fourthnumber, firstnumber;
    printf("Enter a four-digit number: ");
    scanf("%d", &number);
    sum=0;
    num=number;
    firstnumber=number/1000;
    fourthnumber=number%10;
    number=number/100;
    secondnumber=number%10;
    sum=firstnumber+secondnumber+fourthnumber;
    printf("The sum of the second, fourth, first number in %d is: %d", num, sum);
}
