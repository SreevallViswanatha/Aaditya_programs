#include <stdio.h>
#include <stdlib.h>

int main()
{

   int num, number, sum, secondnumber, fourthnumber;
   printf("Enter a four-digit number: ");
   scanf("%d", &number);
   sum=0;
   num=number;
   fourthnumber=number%10;
   number=number/100;
   secondnumber=number%10;
   sum=secondnumber+fourthnumber;
   printf("The sum of the second and fourth number in %d is: %d", num, sum);
}
