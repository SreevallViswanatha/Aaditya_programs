#include <stdio.h>
#include <stdlib.h>

int main()
{

  int sum, num, number;
  printf("Enter a four-digit number: ");
  scanf("%d", &number);
  sum=0;
  num=number;
  sum=number/1000;
  number=number/100;
  number=number%10;
  sum=sum+number;
  printf("The sum of the first and second digit in the number, %d is: %d", num, sum);

}
